<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/system_accent1_100">

    <TextView
        android:id="@+id/smsTitle"
        android:layout_width="294dp"
        android:layout_height="62dp"
        android:paddingVertical="8dp"
        android:text="SMS Permissions"
        android:textAlignment="center"
        android:textColor="@android:color/system_accent1_800"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/smsBody1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.987" />

    <Button
        android:id="@+id/smsBtnAllow"
        android:layout_width="112dp"
        android:layout_height="63dp"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="334dp"
        android:backgroundTint="@android:color/system_accent1_800"
        android:text="Allow"
        android:textColor="@android:color/system_accent1_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/smsBtnDeny"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/smsBtnDeny"
        android:layout_width="112dp"
        android:layout_height="63dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="334dp"
        android:backgroundTint="@android:color/system_accent1_800"
        android:text="Deny"
        android:textColor="@android:color/system_accent1_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/smsBtnAllow" />

    <TextView
        android:id="@+id/smsBody1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="Would you like to receive SMS notifications? This requires the following permissions:"
        android:textColor="@android:color/system_accent1_600"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/smsBody2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/smsBody2"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="• Needs to use telephone feature"
        android:textColor="@android:color/system_accent1_600"
        app:layout_constraintBottom_toTopOf="@+id/smsBody3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/smsBody3"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:paddingHorizontal="16dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="• Needs SEND_SMS permission"
        android:textColor="@android:color/system_accent1_600"
        app:layout_constraintBottom_toTopOf="@+id/smsBtnAllow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Awaiting user response..."
        android:textAllCaps="false"
        android:textColor="@android:color/system_accent1_500"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smsBtnDeny" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="47dp"
        android:layout_height="46dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/system_accent1_800"
        app:layout_constraintEnd_toStartOf="@+id/smsTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/stat_sys_phone_call" />

</androidx.constraintlayout.widget.ConstraintLayout>